{
  "env": {
    "commonjs": true,
    "es6": true,
    "jasmine": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "jasmine"
  ],
  "extends": "eslint:recommended",
  "rules": {
    "array-bracket-spacing": ["error", "never"],
    "comma-dangle": [2,"never"],
    "linebreak-style": ["error", "unix"],
    "no-console": "off",
    "no-extra-parens": [2,"all"],
    "no-use-before-define": 2,
    "brace-style": [1,"1tbs",{}],
    "no-mixed-spaces-and-tabs": 2,
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "space-before-function-paren": ["error", "never"]
  },
  "globals": {
    "__dirname": true,
    "console": true,
    "document": true,
    "process": true,
    "XMLHttpRequest": true,
    "window": true,
    "config": true
  }
}
